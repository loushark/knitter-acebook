
<p id=”notice”><%= notice %></p>
<% if current_user %>
  <div class="post-form-div">
    <div>
      <h3>Post:</h3>
    </div>
    <%= render partial: 'posts/form' %>
  </div>
<% end %>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post-div">
      <%= render partial: 'posts/post', locals: { post: post }  %>
    </div>
  <% end %>
</div>
