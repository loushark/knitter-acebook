<!DOCTYPE html>
<html>
  <head>
    <title>Knitter</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="icon"
    href="/k.png">
  </head>

  <body>
    <header>
      <div class="grid-container">
        <!-- <a href=""> -->
          <a href="/" id='logo-text'><img class="logo" src="/k.png">nitter</a>
          <div class="grid-item"></div>
          <div class="grid-item"></div>
          <div class="grid-item"></div>
          <div class="grid-item"></div>
        <!-- </a> -->
        <% if current_user %>
          <div class="grid-item">
            <%= link_to friend_path(current_user.id), class: "friends-page" do %>
              <%= image_tag current_user.image, id: "current-user-image"%>
            <% end %>
          </div>
          <div class="username"><%= current_user.username %></div>
          <div class="grid-item"><a><%= link_to "Log Out", logout_path %></a></div>

        <% else %>
          <div class="grid-item">
          </div>
          <div class="grid-item">
            <%= link_to "Sign Up", signup_path %>
          </div>
          <div class="grid-item-login">
            <div class="login-form">
              <%= render partial: 'sessions/form'%>
            </div>
          </div>
        <% end %>
      </div>
    </header>

    <main>
      <div class="left-container">
        <%= yield %>
      </div>

      <div class="right-container">
          <img class="adimage-div" src="/ads/jammie_dodgers.png">
          <img class="adimage-div" src="/ads/win_a_teapot.png">
          <img class="adimage-div" src="/ads/missing_cat.png">
          <img class="adimage-div" src="/ads/privacypolicy.PNG">
          <img class="adimage-div" src="/ads/icecream.PNG">
          <img class="adimage-div" src="/ads/head_scarves.png">
          <img class="adimage-div" src="/ads/ribena.PNG">
          <img class="adimage-div" src="/ads/kiwi_shaver.PNG">
          <img class="adimage-div" src="/ads/toast.PNG">
      </div>
    </main>
  </body>
</html>
